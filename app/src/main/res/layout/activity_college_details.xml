<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CollegeDetails"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.denzcoskun.imageslider.ImageSlider
            android:layout_height="220dp"
            android:layout_width="410dp"
            app:auto_cycle="true"
            app:delay="0"
            app:period="1000"
            app:corner_radius="5"
            android:id="@+id/slider"
            app:placeholder="@color/colorPrimary">

        </com.denzcoskun.imageslider.ImageSlider>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_weight="8"
            android:alignmentMode="alignMargins"
            android:columnCount="1"
            android:padding="8dp"
            android:rowCount="1">

            <!--row 1-->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:orientation="vertical"
                        android:background="#48AAAD">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:text="Charotar University of Science and Technology"
                            android:textAlignment="center"
                            android:textSize="30sp"
                            android:id="@+id/cName"
                            android:textColor="#ffffff"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Please wait..."
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:id="@+id/cAddress"
                            android:textColor="#ffffff"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Please wait..."
                                    android:textSize="20dp"
                                    android:id="@+id/cDetails"
                                    android:fontFamily="@font/kite_one"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="please wait\n"
                                    android:textSize="20dp"
                                    android:id="@+id/cLink" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TableLayout
                                        android:id="@+id/table"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="10dp"
                                        android:layout_marginVertical="30dp"
                                        android:background="#48AAAD"
                                        android:collapseColumns="">

                                        <TableRow>
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Branches"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:textSize="20dp"
                                                android:textStyle="bold"
                                                android:textColor="#ffffff"/>
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Fee"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:textSize="20dp"
                                                android:textStyle="bold"
                                                android:textColor="#ffffff"/>
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Placement"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:textSize="20dp"
                                                android:textStyle="bold"
                                                android:textColor="#ffffff"/>
                                        </TableRow>

                                        <TableRow>
                                            <TextView
                                                android:layout_height="wrap_content"
                                                android:layout_width="wrap_content"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:text="CE"
                                                android:background="#ffffff"
                                                android:layout_marginHorizontal="1dp"
                                                android:layout_marginBottom="1dp"
                                                android:id="@+id/row1branch"/>
                                            <TextView
                                                android:layout_height="wrap_content"
                                                android:layout_width="wrap_content"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:text="1.4 lakh"
                                                android:background="#ffffff"
                                                android:layout_marginRight="1dp"
                                                android:layout_marginBottom="1dp"
                                                android:id="@+id/row1fee"/>
                                            <TextView
                                                android:layout_height="wrap_content"
                                                android:layout_width="wrap_content"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:text="80%"
                                                android:background="#ffffff"
                                                android:layout_marginRight="1dp"
                                                android:layout_marginBottom="1dp"
                                                android:id="@+id/row1placement"/>
                                        </TableRow>

                                        <TableRow>
                                            <TextView
                                                android:layout_height="wrap_content"
                                                android:layout_width="wrap_content"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:text="IT"
                                                android:background="#ffffff"
                                                android:layout_marginHorizontal="1dp"
                                                android:layout_marginBottom="1dp"
                                                android:id="@+id/row2branch"/>
                                            <TextView
                                                android:layout_height="wrap_content"
                                                android:layout_width="wrap_content"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:text="1.3 lakh"
                                                android:background="#ffffff"
                                                android:layout_marginRight="1dp"
                                                android:layout_marginBottom="1dp"
                                                android:id="@+id/row2fee"/>
                                            <TextView
                                                android:layout_height="wrap_content"
                                                android:layout_width="wrap_content"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:text="90%"
                                                android:background="#ffffff"
                                                android:layout_marginRight="1dp"
                                                android:layout_marginBottom="1dp"
                                                android:id="@+id/row2placement"/>
                                        </TableRow>

                                        <TableRow>
                                            <TextView
                                                android:layout_height="wrap_content"
                                                android:layout_width="wrap_content"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:text="Civil"
                                                android:background="#ffffff"
                                                android:layout_marginHorizontal="1dp"
                                                android:layout_marginBottom="1dp"
                                                android:id="@+id/row3branch"/>
                                            <TextView
                                                android:layout_height="wrap_content"
                                                android:layout_width="wrap_content"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:text="1.6 lakh"
                                                android:background="#ffffff"
                                                android:layout_marginRight="1dp"
                                                android:layout_marginBottom="1dp"
                                                android:id="@+id/row3fee"/>
                                            <TextView
                                                android:layout_height="wrap_content"
                                                android:layout_width="wrap_content"
                                                android:layout_weight="1"
                                                android:gravity="center"
                                                android:text="75%"
                                                android:background="#ffffff"
                                                android:layout_marginRight="1dp"
                                                android:layout_marginBottom="1dp"
                                                android:id="@+id/row3placement"/>
                                        </TableRow>

                                    </TableLayout>
                                    
                                    <Button
                                        android:id="@+id/tablebutton"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Show Details"
                                        android:textAllCaps="false"
                                        android:textColor="#ffffff"
                                        android:background="@drawable/buttonshape"/>

                                </LinearLayout>
                            </LinearLayout>

                        </ScrollView>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </GridLayout>
    </LinearLayout>
</LinearLayout>